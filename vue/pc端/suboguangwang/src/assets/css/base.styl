html, body, ul, li, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, form, fieldset, legend, img
  margin 0
  padding 0
html, body, #rootApp, #app
  width 100%
  height 100%
  position absolute
  top 0
img
  object-fit cover
  max-width 100%
  max-height 100%
.flex
  display flex
  justify-content space-between
.flex-box
  .left-box, .right-box
    display inline-block
    vertical-align top

.all-main-box
  width 12.00rem
  margin 0 auto

.title
  width 100%
  height .55rem
  h2
    border-bottom .02rem solid #3F51B5
    display inline
    font-size .24rem
    padding .13rem 0
.line-1
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
.line-3
  display -webkit-box
  overflow hidden
  -webkit-box-orient vertical
  -webkit-line-clamp 3
