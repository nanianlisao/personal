/* pages/player/player.wxss */

page {
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 0;
  padding-top: 44rpx;
  box-sizing: border-box;
}

.player {
  height: 100%;
}

.filter {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(40rpx);
  opacity: 0.6;
  z-index: -1;
}

.filter image {
  width: 100%;
  height: 100%;
}

.top-name {
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #fff;
  width: 55%;
}

.top {
  position: relative;
}

.top .return {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 0;
  left: 10rpx;
  text-align: center;
}

.top .return text {
  font-size: 44rpx;
  color: #ffcd32;
  line-height: 80rpx;
}

.singer-name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  width: 80%;
}

.poster2 {
  width: 600rpx;
  height: 600rpx;
  margin: 50rpx auto;
  border: 20rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: rotating 30s linear infinite;
  overflow: hidden;
}
.poster2.stop{
  animation-play-state:paused;
}

.poster2 image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

@keyframes rotating {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

.lyric {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 40rpx;
  text-align: center;
  margin-top: 50rpx;
}

.control-wrap {
  margin-top: 60rpx;
}

.control-wrap .progress {
  padding: 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
}

.control-wrap .progress .slider {
  flex: 1;
  margin: 0 20rpx;
}

.control-wrap .control {
  margin-top: 50rpx;
  padding: 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 60rpx;
  color: #ffcd32;
}

.control-wrap .control .favorite {
  color: #d93f30;
}

.control-wrap .control .center {
  font-size: 80rpx;
}
