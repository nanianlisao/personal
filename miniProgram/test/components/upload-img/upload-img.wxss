/* components/upload-img/upload-img.wxss */

image {
  width: 100%;
  height: 100%;
}

.imgs {
  display: flex;
  background: #fff;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.imgs .imgCtn {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.imgs .imgCtn .del-img {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  width: 32rpx;
  height: 32rpx;
}

.imgs .addImg {
  width: 220rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border: 1rpx dashed #b3b3b3;
  border-radius: 10rpx;
  margin-left: 25rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.imgs .addImg .img-box {
  width: 50rpx;
  height: 50rpx;
  margin-left: 0;
  margin-top: 0;
}

.imgs .addImg .length {
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
  line-height: 36rpx;
  margin-top: 18rpx;
}
