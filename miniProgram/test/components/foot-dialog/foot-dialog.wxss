/* components/foot-dialog/foot-dialog.wxss */

.foot-dialog-mask {
  position: fixed;
  z-index: 98;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.foot-dialog {
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  width: 100%;
  /* max-height: 600rpx; */
  background: #fff;
  transition: all 0.2s linear;
  /* transform: translateY(600rpx); */
}

.foot-dialog.show {
  transform: translateY(0rpx) !important;
}
