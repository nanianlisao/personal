/* components/foot-dialog/foot-dialog.wxss */

.foot-dialog-mask {
  position: fixed;
  z-index: 98;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.foot-dialog {
  position: fixed;
  z-index: 99;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  max-height: 600rpx;
  background: #fff;
  opacity: 0;
  transition: all 0.2s linear;
}

.foot-dialog.show {
  opacity: 1;
}
