/* pages/hotelBook/checkDate/checkDate.wxss */

.wrapper {
  padding: 206rpx 0 20rpx 0;
}

.top-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  /* padding: 0 34rpx; */
  box-sizing: border-box;
  background-color: #fff;
}

.top-title {
  line-height: 102rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

.top-title .arrow-box {
  position: absolute;
  width: 19rpx;
  height: 35rpx;
  padding: 20rpx;
  top: 15rpx;
  left: 30rpx;
}

.top-title image {
  display: block;
  width: 100%;
  height: 100%;
}

.top {
  line-height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 2rpx solid #eceae9; */
  background-color: #eee;
  color: #333;
}

.top .date {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}

.top .date:first-child, .top .date:last-child {
  color: #f00;
}

.content {
  /* padding: 0 4rpx; */
}

.content .monthes:not(:first-child) {
  margin-top: 20rpx;
}

.content .monthes .title {
  text-align: center;
  font-size: 30rpx;
  color: #1a1a1a;
  line-height: 80rpx;
}

.content .monthes .days {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.content .monthes .days .day {
  width: 106rpx;
  height: 106rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.content .monthes .days .day:nth-child(7n),
.content .monthes .days .day:nth-child(7n + 1) {
  color: #f00;
}

.content .monthes .days .day .mark {
  margin-top: 10rpx;
  font-size: 20rpx;
}

.content .monthes .days .day:nth-child(7n) {
  margin-right: 0;
}

/* 被选中的时间 */

.content .monthes .days .day.choose {
  background-color: #7e1f59;
  color: #fff;
}

.content .monthes .days .day.hidden {
  color: transparent;
}

/* 本月过去的时间 */

.content .monthes .days .day.grey {
  color: #ccc;
}

/* 中间被选中的时间 */

.content .monthes .days .day.weekChecked {
  background-color: #d8bbcd;
}

.footer-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 2;
}

.footer-btn view {
  background-color: #7e1f59;
  border-radius: 8rpx;
  margin: 24rpx;
  width: 702rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
