.page-start
  height 100%
  .start
    width 100%
    height 100%
    .wx-swiper-dot
      width 12px
      height 12px
      background-color rgba(255, 255, 255, 0.3)
    .wx-swiper-dot-active
      width 31px
      height 12px
      border-radius 12px
      background-color #fff
  .skip
    position fixed
    top 48px
    right 30px
    width 122px
    height 60px
    background-color rgba(0, 0, 0, 0.5)
    border-radius 60px
    font-size 28px
    color #fff
