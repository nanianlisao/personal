.search
    height 100px
    padding 0 30px
    .input
        flex 1
        height 72px
        background #EDEDEE
        border-radius 6px
        .search-img
            width 57px
            display flex
            align-items center
            justify-content flex-end
            image
                width 27px
                height 27px
        input
            flex 1
            height 100%
            padding 0 15px
            font-size 30px
            color #111111
    .cancel
        margin-left 34px
        font-size 32px
        color #3967E6
.search-list
    padding 0 20px
    .item
        position relative
        display flex
        .line-img
            position absolute
            left 0
            bottom 0
            width 100%
            height 2px
        .item-left
            width 12px
            .item-dot
                margin-top 45px
                width 12px
                height 12px
        .item-right
            width calc(100% - 12px)
            box-sizing border-box
            padding 30px 10px
            display flex
            justify-content space-between
            flex-direction column
            .item-title
                width 100%
                font-size 30px
                color #333333
            .item-time
                font-size 22px
                color #959595
