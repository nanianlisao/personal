/* *index.wxss* */
.page-index
    .search
        height 100px
        padding 0 40px
        .search-box
            width 100%
            height 72px
            background #F5F5F5
            border-radius 8px
            .search-img
                width 27px
                height 27px
            Text
                padding 0 10px
                font-size 30px
                color #B5B5B5
    .my-swiper
        height 400px
        width 100%
        box-sizing border-box
        .wx-swiper-dot
            width 12px
            height 12px
            background-color rgba(0, 0, 0, 0.3)
        .wx-swiper-dot-active
            background-color #fff
        .swiper-current
            padding 0
            .card
                position relative
                transform scale3d(1, 1, 1)
        .card
            position relative
            transform scale3d(0.93, 0.88, 1)
            transition transform 1s
            width 100%
            height 100%
            overflow hidden
            /* box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.14); */
            background-color #BFBFBF
            border-radius 18px
            &.end
                height 789px
                border-bottom-left-radius 0
                border-bottom-right-radius 0
    .cat
        display flex
        flex-wrap wrap
        padding 50px 20px
        .cat-item
            width 140px
            margin-bottom 20px
            flex-direction column
            .icon-img
                width 80px
                height 80px
                border-radius 50%
                overflow hidden
            .cat-name
                width 100%
                padding 0 10px
                box-sizing border-box
                text-align center
                line-height 65px
                font-size 26px
                color #333333
    .special
        .special-title
            height 36px
            margin 0 40px
            padding 0 13px
            border-left 10px solid #333333
            font-size 36px
            color #111111
            font-weight bold
        .special-contian
            display flex
            justify-content space-between
            padding 30px
            box-sizing border-box
            margin-top 10px
            .special-card
                width 338px
                height 170px
                box-sizing border-box
                background #EEF2FF
                border-radius 10px
                .card-img
                    width 100%
                    height 100%
    .trends
        margin 0 40px
        padding 26px 0
        border-top 1px solid #E1E1E1
        display flex
        .trends-left
            .trends-img
                width 67px
                height 70px
            .line-vert-img
                padding 0 21px
                width 1px
                height 110px
        .trends-list
            width 100%
            box-sizing border-box
            height 150px
            .trends-item
                flex 1
                height 50px
            .trends-item .trends-item-label
                /* width:66px; */
                padding 0 10px
                margin-left 10px
                height 28px
                border 1px solid #29304C
                border-radius 6px
                font-size 22px
                color #333333
                white-space nowrap
            .trends-item .trends-item-title
                padding 0 13px
                font-size 26px
                color #9B9B9B
